fastq_suffix2 = config["fastq_suffix2"]
fastqDir = config["fastqDir"]

# this is where Snakemake output will go, specify with 'gatkDir' in config.yml
bamDir = config["bamsForGatk"] 
gvcfDir = config["gatkDir"] + config["gvcfDir"]
dbDir = config["gatkDir"] + config["dbDir"]
vcfDir = config["gatkDir"] + config["vcfDir"]
